#! /usr/bin/env/zsh

export PAGER="moar"
export BAT_PAGER="moar"
export MANPAGER="moar"
export TERM="xterm-256color"
export COLORTERM="truecolor"
export TERM_PROGRAM="iTerm.app"

export MOAR="                       \
-colors=16M                         \
-mousemode=select                   \
-render-unprintable=highlight       \
-style=dracula                      \
-terminal-fg                        \
-no-clear-on-exit                   \
-quit-if-one-screen"

