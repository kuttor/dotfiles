#!/bin/bash

function s2a {
    ENV="$1"

    if [ "$ENV" = "nonprod" ]; then
        saml2aws login --session-duration=32400 --force --verbose
        export AWS_PROFILE=nonprod
    elif [ "$ENV" = "prod" ]; then
        saml2aws login --session-duration=9400 --force --verbose
        export AWS_PROFILE=prod
    fi
}
