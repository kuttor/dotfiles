# vim: syntax=gitconfig
# File: gitconfig

[alias]
	info = "status --short --branch"
	tags = "tag --list"
	users = "shortlog --summary -"
	doit = "!f() { git add \"$1\"; git commit -am \"$2\"; git push; }; f" 
	branches = "branch --all"
	tracked = "!git ls-tree -r master --name-only"
	aliases = "!git config --get-regexp alias | cut -c 7-"
	remotes = "remote -v"
	uncommit = "reset --soft HEAD~1"
	status-select = "!git-status-select"

[user]
	name = Andrew Kuttor
	email = andrew.kuttor@gmail.com

[github]
	user = kuttor

[branch]
	autosetupmerge = true

[merge]
	tool = smerge

[mergetool "Sublime Merge"]
        cmd = smerge mergetool \"$BASE\" \"$REMOTE\" \"$LOCAL\" -o \"$MERGED\"

[diff]
	tool = smerge

[difftool "sublimerge"]
	cmd = smerge

[diff]
	tool = vscode
	renames = copies
	mnemonicprefix = true

[difftool "vscode"]
    	cmd = code --wait --diff $LOCAL $REMOTE

[pager]
    	difftool = true

[pull]
    	rebase = true

[push]
    	followTags = true

[rerere]
    	enabled = true
    	autoupdate = 1

[advice]
	pushNonFastForward = false
	statusHints = false

[apply]
    	whitespace = fix

[core]
	editor = nvim
    	whitespace = trailing-space,space-before-tab
    	excludesfile = /Users/akuttor/.gitignore
    	attributesfile = /Users/akuttor/.gitattributes
    	trustctime = false
    	untrackedCache = true

[help]
	autocorrect = 1

[color]
    	branch = auto
    	diff = auto
    	interactive = auto
    	pager = true
    	status = auto
   	 ui = auto

[web]
    	browser = google-chrome

