# vim: syntax=gitconfig
# File: gitconfig

[alias]
	info = "status --short --branch"
	tags = "tag --list"
	users = "shortlog --summary -"
	doit = "!f() { git add \"$1\"; git commit -am \"$2\"; git push; }; f"
	branches = "branch --all"
	tracked = "!git ls-tree -r master --name-only"
	aliases = "!git config --get-regexp alias | cut -c 7-"
	remotes = "remote -v"
	uncommit = "reset --soft HEAD~1"
	status-select = "!git-status-select"

[user]
	name = Andrew Kuttor
	email = andrew.kuttor@gmail.com

[github]
	user = kuttor

[branch]
	autosetupmerge = true

[merge]
	tool = meld

[mergetool "Sublime Merge"]
  cmd = meld mergetool \"$BASE\" \"$REMOTE\" \"$LOCAL\" -o \"$MERGED\"

[diff]
  tool = diff-so-fancy --patch
  guitool = meld

[pager]
  difftool = true

[pull]
  rebase = true

[push]
  followTags = true

[rerere]
  enabled = true
  eautoupdate = 1

[advice]
	pushNonFastForward = false
	statusHints = false

[apply]
	whitespace = fix

[core]
	editor = nvim
	whitespace = trailing-space,space-before-tab
	excludesfile = /Users/akuttor/.gitignore
	attributesfile = /Users/akuttor/.gitattributes
	trustctime = false
	untrackedCache = true
	pager = diff-so-fancy | less --tabs=4 -RFX

[help]
	autocorrect = 1

[color]
  branch = auto
  diff = auto
  interactive = auto
  pager = true
  status = auto
  ui = auto

[web]
  browser = safari

[credential]
	helper = cache

[interactive]
