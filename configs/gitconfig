# vim: syntax=gitconfig
# File: gitconfig

[alias]
	aliases       = "!git config --get-regexp alias | cut -c 7-"
	branches      = "branch --all"
  co            = "checkout"
	doit          = "!f() { git add \"$1\"; git commit -am \"$2\"; git push; }; f"
	info          = "status --short --branch"
  new-branch    = "checkout -b"
	remotes       = "remote -v"
	status-select = "!git-status-select"
	tags          = "tag --list"
	tracked       = "!git ls-tree -r master --name-only"
	uncommit      = "reset --soft HEAD~1"
	users         = "shortlog --summary -"

[user]
	name = changeme
	email = changeme

[github]
	user = kuttor

[branch]
	autosetupmerge = true

[merge]
	tool = meld

[mergetool "Sublime Merge"]
  cmd = meld mergetool \"$BASE\" \"$REMOTE\" \"$LOCAL\" -o \"$MERGED\"

[diff]
  tool = diff-so-fancy --patch
  guitool = meld

[pager]
  difftool = true

[pull]
  rebase = true

[push]
  followTags = true

[rerere]
  enabled = true
  eautoupdate = 1

[advice]
	pushNonFastForward = false
	statusHints = false

[apply]
	whitespace = fix

[core]
	editor = nvim
	whitespace = trailing-space,space-before-tab
	excludesfile = /Users/akuttor/.gitignore
	attributesfile = /Users/akuttor/.gitattributes
	trustctime = false
	untrackedCache = true
	pager = diff-so-fancy | less --tabs=4 -RFX

[help]
	autocorrect = 1

[color]
  branch = auto
  diff = auto
  interactive = auto
  pager = true
  status = auto
  ui = auto

[web]
  browser = safari

[credential]
	helper = cache

[interactive]
	diffFilter = diff-so-fancy --patch
