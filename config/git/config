#! /usr/bin/env gitconfig

[alias]
  aliases       = "!git config --get-regexp alias | cut -c 7-"
  branches      = "branch --all"
  co            = "checkout"
  doit          = "!f() { git add \"$1\"; git commit -am \"$2\"; git push; }; f"
  info          = "status --short --branch"
  remotes       = "remote -v"
  state         = "!git status --show-stash --verbose --verbose; git stash list --color=always --pretty='%C(yellow)%h %>(14)%Cgreen%cr %C(blue)%C'"
  status-select = "!git-status-select"1
  tags          = "tag --list"
  tracked       = "!git ls-tree -r master --name-only"
  uncommit      = "reset --soft HEAD~1"
  users         = "shortlog --summary -"
  who           = "shortlog --summary --numbered --email" 
  info          = "status --short --branch"
  name          = "basename $(git config --get remote.origin.url)"

[advice]
  pushNonFastForward = false
  statusHints = false

[apply]
  whitespace = fix

[branch]
  autosetupmerge = true

[color]
  branch = auto
  diff = auto
  interactive = auto
  pager = true
  status = auto
	ui = true

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse

[core]
  editor = nvim
  whitespace = trailing-space,space-before-tab
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes
  trustctime = false
  untrackedCache = true

[credential]
  helper = cache

[delta]
  navigate = true # use n and N to move between diff sections
  theme = One Half Dark

[diff]
  colorMoved = default

[github]
  user = kuttor

[help]
  autocorrect = 1


[merge]
  tool = meld

[mergetool "Sublime Merge"]
  cmd = meld mergetool \"$BASE\" \"$REMOTE\" \"$LOCAL\" -o \"$MERGED\"

[pager]
  difftool = true

[pull]
	rebase = false
	ff = true

[push]
  followTags = true
  default = current
  autoSetupRemote = true

[rerere]
  enabled = true
  eautoupdate = 1

[user]
	name = Andrew Kuttor
	email = andrew.kuttor@gmail.com

[web]
  browser = safari


